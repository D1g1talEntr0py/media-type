{
	"env": {
		"browser": true,
		"node": true,
		"es2022": true,
		"jest": true
	},
	"plugins": ["compat", "jsdoc"],
	"extends": ["eslint:recommended", "plugin:compat/recommended", "plugin:jsdoc/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"jsdoc/tag-lines": 0,
		"jsdoc/no-defaults": 0,
		"jsdoc/require-param": [
			"error"
		],
		"no-unused-vars": [
			"error",
			{
				"args": "after-used"
			}
		],
		"no-constant-condition": "off",
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always",
			{
				"omitLastInOneLineBlock": true,
				"omitLastInOneLineClassBody": true
			}
		]
	},
	"overrides": [],
	"settings": {
		"jsdoc": {
			"mode": "typescript",
			"preferredTypes": { "object": "Object", "Iterator": "Iterator", "IterableIterator": "IterableIterator" },
			"structuredTags": {	"template": {	"name": "namepath-defining", "type": false } },
			"tagNamePreference": {
				"augments": {
					"message": "@extends is to be used over @augments as it is more evocative of classes than @augments",
					"replacement": "extends"
				}
			}
		}
	}
}